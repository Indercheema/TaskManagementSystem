@model IEnumerable<TaskManagementSystem.Models.ProjectContributor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Project.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.Title)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Project.Tasks)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @foreach (var t in item.Project.Tasks)
                    {
                    <td>
                        <ul>
                                @Html.DisplayFor(modelItem => t.Title)
                        </ul>
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => t.RequiredHours)

                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => t.IsCompleted)

                    </td>
                    <td>
                        <a asp-action="UpdateRequiredHours" asp-route-id="@t.Id">Adjust Required Hours</a> |
                        <a asp-action="MarkAsCompleted"  asp-route-id="@t.Id">Mark As Completed</a> |
                    </td>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

