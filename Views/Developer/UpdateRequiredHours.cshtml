@model TaskManagementSystem.Models.Task

@{
    ViewData["Title"] = "UpdateRequiredHours";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update Required Hours</h1>
<hr />

<div class="row">
    <div class="col-md-4 mt-4">
        <form asp-action="UpdateRequiredHours" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RequiredHours" class="control-label"></label>
                <input asp-for="RequiredHours" class="form-control" />
                <span asp-validation-for="RequiredHours" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to Board</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
