@using Microsoft.AspNetCore.Identity;

@model TaskManagementSystem.Models.ViewModel.AssignRoleVM

<h1>Create Project</h1>

<hr />

<div class="row">
    </div class="col-md-4">
        <form asp-action="AssignRole" method="post">
            <div class="form-group mt-4">
                <label asp-for="RoleId" class="control-label"></label>
                <select asp-for="RoleId" asp-items="Model.Roles" class="mt-4"></select>
            </div>
            <div>
                <input asp-for="UserId" value="@Model.UserId" type="hidden" />
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Assign Role" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Users List</a>
</div>

<div class="mt-5">
    @Model.ViewMessage
</div>
